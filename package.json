    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "build": "node_modules/.bin/tsc --build",
        "prestart": "npm run build",
        "start": "node ./lib/index.js",
        "watch": "node_modules/.bin/nodemon --watch ./src -e ts --exec \"npm run start\"",
        "test": "mocha \"lib/test/specs/**/*.js\" --timeout 99999 --exit --forbid-only --exclude lib/test/specs/deadLinks.spec.js",
        "testLinks": "npm run pretest && mocha lib/test/specs/deadLinks.spec.js --timeout 999999 --exit --forbid-only",
        "pretest": "./node_modules/.bin/tsc -p ./src/test/tsconfig.json",
        "runTestsWithCustomers": "npm run pretest && node ./lib/test/utilities/runTestsWithCustomers.js"
    },
    "dependencies": {
        "@types/node": "^12.11.7",
    },
    "devDependencies": {
        "typescript": "^3.9.7"
    }
}
